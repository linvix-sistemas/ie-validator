{
  "compilerOptions": {
    "target": "ES2022",

    "module": "commonjs",

    "declaration": true,
    "declarationMap": true,

    "sourceMap": true,

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/__tests__", "node_modules"]
}
